<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="#344261"
        android:orientation="vertical">
        <Button
            android:id="@+id/search_btn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="搜索"
            android:textSize="16dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/headtitle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="—点击右侧按钮选择您喜欢的分类—"
                android:textSize="15dp"/>

           <ImageButton
                 android:layout_gravity="center"
                 android:id="@+id/ib"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:layout_weight="15"
                 android:scaleType="centerCrop"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"/>
        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/SlidingTabLayout"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#ffffff"
            tl:tl_iconHeight="23dp"
            tl:tl_iconWidth="23dp"
            tl:tl_indicator_color="#2C97DE"
            tl:tl_indicator_height="0dp"
            tl:tl_textSelectColor="@color/colorRed"
            tl:tl_textUnselectColor="@color/colorBlack"
            tl:tl_textsize="20sp"
            tl:tl_underline_color="#fa8072"
            tl:tl_underline_height="1dp"/>




    </LinearLayout>

    <com.java.mahongbo.view.FixedPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>




















